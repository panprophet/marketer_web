                <div class="gallery-blog-big-txt-title font-32 font-white margin-xxl--bottom-2_5-per margin-l--bottom-50 margin-s--left-24 margin-s--right-24">{{item.Title}}</div>
                <div class="gallery-blog-big-txt-text font-16 font-white margin-xxl--bottom-10-per margin-l--bottom-50 margin-s--left-24 margin-s--right-24">{{item.Short | raw }}</div>
                    <button class="button-midd button-border-blue background-black-light font-white font-14">
                        <a href="post/{{item.Slug}}">VIŠE</a>
                    </button>
            </div>
            {% endif %}
        {% endfor %}

        </div>

        <div class="flex flex-column background-black-light padding-xxl--top-100 padding-xxl--bottom-100 padding-xxl--left-90 padding-l--left-none padding-l--top-70 padding-l--bottom-70 align-items--l-center">
            <div class="font-46 font-white margin-xxl--bottom-24 text--l-center">Prošli postovi</div>
            <div class="background-blue line-big"></div>
        </div>

        <div class="flex flex-wrap padding-xxl--bottom-100 margin-xxl--left-24 margin-m--left-18 flex margin-s--right-18">
