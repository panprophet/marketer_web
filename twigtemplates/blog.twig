{% extends 'base.twig' %}
{% block content %}

{% set Post = fetch("Post") %}

    <div class="position gallery-blog background-black-light flex flex-column">
        <div class="gallery-blog-big flex flex--l-direction padding-xxl--left-24 padding-m--left-18 padding-s--left-none margin-l--right-24 margin-m--right-18 margin-s--right-none padding-xxl--top-100 padding-l--top-70 padding-xxl--bottom-100 padding-l--bottom-70 border--bottom-grey-dark">

        {% for item in Post %}
            {% if loop.index < 2 %}
            <div class="gallery-blog-big-pic" style="background-image: url('img/{{item.Image}}');"></div>
