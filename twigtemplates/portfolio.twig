                                <img style="padding-bottom: 0.25rem;" class="projekti-grid-projekat-picture-hover-icon" src="images/facebook-icon.svg">
                            {% endif %}
                            {% if item.Instagram == 'true' %}
                                <img class="projekti-grid-projekat-picture-hover-icon" src="images/instagram-icon.svg">
                            {% endif %}
                            {% if item.Linkedin == 'true' %}
                                <img class="projekti-grid-projekat-picture-hover-icon" src="">
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="projekti-grid-projekat-opis flex flex-column justify-content-center">
                    <div class="projekti-grid-projekat-opis-txt font-grey font-32 margin--left-180-per margin--right-180-per margin--bottom-2_5-per">{{item.Naziv}} </div>
