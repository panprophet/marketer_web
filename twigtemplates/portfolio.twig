{% extends 'base.twig' %}
{% block content %}
{% set Projekti = fetch("Projekti") %}

{% for item in Projekti %}
{% if item.Istakni == 'true' %}
    <div class="portfolio flex flex-column justify-content-end align-items-center" style="background: linear-gradient(0deg, rgba(21, 21, 21, 0.5), rgba(21, 21, 21, 0.5)), url(img/{{item.NaslovnaSlika}});">
        <div class="font-46 font-white margin--bottom-24">{{item.Naziv}}</div>
        <div class="font-16 font-white text-center margin--bottom-2_5-per">{{item.Opis}}</div>
        <div class="line-small background-blue text-center margin--bottom-3-per"></div>
        <a class="margin--bottom-4-per" href="project/{{item.Slug}}">
            <button class="button-midd background-blue font-white font-14">VIŠE</button>
        </a>
        <div class="flex justify-content-center align-items-center margin--bottom-10-per">
            {% if item.Google == 'true' %}
                <img class="portfolio-icon" src="images/google-icon.svg">
            {% endif %}
            {% if item.Facebook == 'true' %}
                <img style="padding-bottom: 0.85rem;" class="portfolio-icon" src="images/facebook-icon.svg">
            {% endif %}
            {% if item.Instagram == 'true' %}
                <img class="portfolio-icon" src="images/instagram-icon.svg">
            {% endif %}
            {% if item.Linkedin == 'true' %}
                <img class="portfolio-icon" src="">
            {% endif %}
        </div>
    </div>
{% endif %}
{% endfor %}

