{% extends 'base.twig' %}
{% block content %}

{% set Projekti = fetch("Projekti", {"id": _GET['1']}) %}

{% for item in Projekti %}
    <div class="portfolio flex flex-column justify-content-end align-items-center" style="background: linear-gradient(0deg, rgba(21, 21, 21, 0.5), rgba(21, 21, 21, 0.5)), url(img/{{item.Slika}});">
        <div class="font-46 font-white margin--bottom-24">{{item.Naslov}}</div>
        <div class="font-16 font-white text-center margin--bottom-2_5-per">{{item.Text}}</div>
        <div class="line-small background-blue text-center margin--bottom-3-per"></div>
        <div class="flex justify-content-center align-items-center margin--bottom-10-per">
            {% if item.Google == 'true' %}
                <img class="portfolio-icon" src="images/google-icon.svg">
            {% endif %}
            {% if item.Facebook == 'true' %}
                <img style="padding-bottom: 0.85rem;" class="portfolio-icon" src="images/facebook-icon.svg">
            {% endif %}
            {% if item.Instagram == 'true' %}
                <img class="portfolio-icon" src="images/instagram-icon.svg">
            {% endif %}
            {% if item.Linkedin == 'true' %}
                <img class="portfolio-icon" src="">
            {% endif %}
        </div>
    </div>


    <div class="project flex">
        <div class="flex-2 flex flex-column justify-content-center">
            <div class="font-32 font-grey padding--left-180 padding--right-180 margin--bottom-24">Izazov:</div>
            <div class="line-big background-blue margin--left-180 margin--bottom-48"></div>
            <div class="font-16 font-grey--mid padding--left-180 padding--right-180">{{item.Opis}}</div>
        </div>
        <div class="flex-2 margin--bottom-100 margin--top-100">
            <img class="project-img" src="img/{{item.Slika2}}">
        </div>
    </div>
{% endfor %}


{% include 'klijenti.twig' %}
{% include 'contact_shared.twig' %}

{% endblock %}