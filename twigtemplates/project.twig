{% extends 'base.twig' %}
{% block content %}

{% set item = fetch("Projekti", {"id": _GET['1']})[0] %}


    <div class="portfolio flex flex-column justify-content-end align-items-center" style="background: linear-gradient(0deg, rgba(21, 21, 21, 0.5), rgba(21, 21, 21, 0.5)), url(img/{{item.NaslovnaSlika}});">
        <div class="font-46 font-white margin--bottom-24">{{item.Naziv}}</div>
        <div class="font-16 font-white text-center margin--bottom-2_5-per">{{item.Opis}}</div>
        <div class="line-small background-blue text-center margin--bottom-3-per"></div>
        <div class="flex justify-content-center align-items-center margin--bottom-10-per">
            {% if item.Google == 'true' %}
                <img class="portfolio-icon" src="images/google-icon.svg">
            {% endif %}
            {% if item.Facebook == 'true' %}
                <img style="padding-bottom: 0.85rem;" class="portfolio-icon" src="images/facebook-icon.svg">
            {% endif %}
            {% if item.Instagram == 'true' %}
                <img class="portfolio-icon" src="images/instagram-icon.svg">
            {% endif %}
            {% if item.Linkedin == 'true' %}
                <img class="portfolio-icon" src="">
            {% endif %}
        </div>
    </div>


    <div class="project flex">
        <div class="flex-2 flex flex-column justify-content-center">
            <div class="font-32 font-grey padding--left-180 padding--right-180 margin--bottom-24">Izazov:</div>
            <div class="line-big background-blue margin--left-180 margin--bottom-48"></div>
            <div class="font-16 font-grey--mid padding--left-180 padding--right-180">{{item.Izazov}}</div>
        </div>
        <div class="flex-2 margin--bottom-100 margin--top-100">
            <img class="project-img" src="img/{{item.IzazovSlika}}">
        </div>
    </div>


    <div class="background-black-lighter flex">
        <div style="position: relative; width:60%">
            <div class="owl-carousel owl-theme project--owl">
            {% set SlikeZadataka = fetch("SlikeZadataka", {parent_id: item.id}) %}
            {% for slike in SlikeZadataka %}
                <div class="project--owl-img margin--top-100 margin--bottom-48 margin--left-180-per" style="background-image: url('img/{{ slike.Slika }}'); background-size: cover; background-repeat: no-repeat; background-position: center;">
                </div>
            {% endfor %}
            </div>
        </div>
        
        <div class="project--rezultat-left flex flex-column justify-content-center">
            <div class="font-32 font-white margin--bottom-24">Zadatak</div>
            <div class="line-big background-blue margin--bottom-24"></div>
            
                <div class="project-zadatak font-16 font-white margin--bottom-24">{{item.Zadatak}}</div>
            
        </div>
    </div>

    <div style="min-height: 880px;" class="flex">
   
        <div class="project--rezultat-left flex flex-column justify-content-center">
            <div class="font-32 font-grey margin--bottom-24 margin--left-180">Rezultat</div>
            <div class="line-big background-blue margin--bottom-24 margin--left-180"></div>
            <div class="font-16 font-grey margin--bottom-24 margin--left-180">{{item.Rezultat}}</div>
        </div>
        <div class="project--rezultat-right"></div>
   
    </div>


        <div class="flex justify-content-between background-black-light padding--top-100 padding--bottom-100 padding--left-180 padding--right-180">
            <div class="flex align-items-center">
                <div class="font-64 font-white margin--left-24 margin--right-24">{{item.PosecenostProcenat}}</div>
                {% if item.PosecenostRast == 'true' %}
                    <img style="height: 2.5vw" src="images/up.png">
                {% else %}
                    <img style="height: 2.5vw" src="images/down.png">
                {% endif %}
                <div class="font-16 font-white margin--left-24 margin--right-24">{{item.PosecenostText}}</div>
            </div>
            <div class="project-line"></div>
            <div class="flex align-items-center">
                <div class="font-64 font-white margin--left-24 margin--right-24">{{item.ShareProcenat}}</div>
                {% if item.ShareRast == 'true' %}
                    <img style="height: 2.5vw" src="images/up.png">
                {% else %}
                    <img style="height: 2.5vw" src="images/down.png">
                {% endif %}
                <div class="font-16 font-white margin--left-24 margin--right-24">{{item.ShareText}}</div>
            </div>
            <div class="project-line"></div>
            <div class="flex align-items-center">
                <div class="font-64 font-white margin--left-24 margin--right-24">{{item.CTRprocenat}}</div>
                {% if item.CTRrast == 'true' %}
                    <img style="height: 2.5vw" src="images/up.png">
                {% else %}
                    <img style="height: 2.5vw" src="images/down.png">
                {% endif %}
                <div class="font-16 font-white margin--left-24 margin--right-24">{{item.CTRtext}}</div>
            </div>
        </div>
  
{% include 'klijenti.twig' %}
{% include 'contact_shared.twig' %}

{% endblock %}