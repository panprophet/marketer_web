    </div>
    <div class="flex justify-content-between w-100 margin-xxl--bottom-60">
      <div class="flex align-items-center w-25--min"></div>
      <div class="flex align-items-center justify-content-end w-25--min">
        <div class="flex align-items-center font-18">
          <div class="font-blue">1</div><div class="margin-xxl--left-10" style="border: 1px solid #606060; width: 24px;"></div><div class="font-white margin-xxl--left-10">4</div>
        </div>
        <div class="margin-xxl--left-24 text-hover" onclick="nextStep(100)">
          <span class="font-white">Sledeći korak</span><span class="margin-xxl--left-24"><img src="./images/icons/next.svg" /></span>
        </div>
        <div class="line-tiny background-blue margin-xxl--left-24"></div>
      </div>
    </div>
  </div>
  <!-- prvi ekran -->
