{% extends "base.twig" %}
{% block description %}All posts{% endblock %}
{% block content %}

<div class="kontakt_solo flex w-100 overflow-hidden" style="background-image: url('./images/kontaktbck.png')" id="contactwrap">
  <div class="kontakt_solo--inner flex flex-column justify-content-between w-100--min" id="strana1">
    <div class="margin-xxl--top-200 margin-xl--top-100 margin-l--top-100 padding-xxl--left-180 padding-xl--left-60 padding-l--left-100 padding-xxl--right-180 padding-xl--right-60 padding-l--right-100">
        <div class="font-36 font-white margin-xxl-bottom-24 margin-xl--bottom-18">Kontakt</div>
        <div class="line-big background-blue"></div>
    </div>
    <div class="flex align-items-center padding-xxl--left-180 padding-xl--left-60 padding-l--left-100 padding-xxl--right-180 padding-xl--right-60 padding-l--right-100">
      <div class="font-32 font-white"><label class="margin-xxl--right-24">Zdravo, ja sam</label><input class="input-kontakt input-kontakt-normal font-32 font-white padding-xxl--left-10 padding-xxl--right-10" type="text" name="ime" /></div>
